{
  "builders": [
    {
      "boot_command": [
		"<enter><wait>",
		"<f6><esc>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
		"<bs><bs><bs>",
		"/install/vmlinuz ",
		"initrd=/install/initrd.gz ",
		"net.ifnames=0 ",
		"auto-install/enable=true ",
		"debconf/priority=critical ",
		"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-16.04.cfg",
		"<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "headless": true,
      "iso_checksum": "83a60e1cc28068534b3e4f2f2c9881bb32cbfb74",
      "iso_checksum_type": "sha1",
      "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04-desktop-amd64.iso",
      "output_directory": "packer-ubuntu-16.04-amd64-virtualbox",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "60m",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-ubuntu-16.04-amd64"
    }
  ],
  "post-processors": [
    [{
      "output": "builds/ubuntu-16.04.box",
      "type": "vagrant"
    },

    {
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "habsgoalie/ubuntu-16.04-docker",
        "artifact_type": "vagrant.box",
        "metadata": {
          "created_at": "{{timestamp}}",
          "provider": "virtualbox-iso",
          "version": "1.0",
          "description":"Ubuntu 16.04 base image pre-installed with docker and git."
        }
    }]
  ],
  "provisioners": [
        {
            "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
            "override": {
                "virtualbox-iso": {
                    "scripts": [
                        "scripts/base.sh",
                        "scripts/system.sh",
                        "scripts/vagrant.sh",
                        "scripts/python.sh",
                        "scripts/virtualbox.sh",
                        "scripts/docker-16.04.sh",
                        "scripts/cleanup.sh"
                    ]
                }
            },
            "type": "shell"
        }
    ]
}
